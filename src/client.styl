.react-rater {
  font-size:  80px;
  display: inline-block;
  line-height: normal; }
  .react-rater a {
    cursor: pointer;
    color: #ccc; }
    .react-rater a.will-be-active {
      color: #ffdd99; }
    .react-rater a.is-active {
      color: #fc6; }
    .react-rater a.is-disabled {
      color: #ccc;
      cursor: not-allowed; }
  .react-rater.is-disabled a {
    cursor: default; }

html, body {
  margin: 0;
  padding: 0; }

html {
  height: 100%; }

body {
  font: 20px/1.8 'Helvetica Nenu', Helvetica, sans-serif;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; }

dd + dt {
  border-top: 1px solid #eee;
  margin-top: 20px;
  padding-top: 20px; }

code {
  display: inline-block;
  background: #f1f1f1;
  border-radius: 3px;
  padding: 0 10px; }

pre {
  background: #f1f1f1;
  border-radius: 5px;
  padding: 10px 20px; }
  pre code {
    background: transparent; }

.face-rater span {
  display: inline-block; }


.send-button
  display block
  width 100%
  background #999
  font-size 1.7em
  margin-bottom 1em
  color white
